<div class="flex flex-col min-h-screen bg-base-100 py-10 px-3 md:p-10">
  <div class="flex flex-col flex-1 bg-primary rounded-lg text-secondary px-2 py-10 md:p-10">

    <div class="flex flex-col w-full px-1 md:px-10">
      <h2 class="text-xl md:text-3xl font-bold text-center md:pt-20 pb-5 md:pb-10">チャレンジモード ランキング</h2>

      <table class="table-auto w-full border-collapse border border-gray-200 mb-5 md:my-10">
        <thead>
          <tr class="bg-accent text-sm md:text-lg">
            <th class="border border-gray-300 py-2">順位</th>
            <th class="border border-gray-300 py-2">ユーザー名</th>
            <th class="border border-gray-300 py-2">正答数</th>
          </tr>
        </thead>
        <tbody>
          <% @rankings.each_with_index do |result, index| %>
            <tr class="bg-base-100">
              <td class="border border-gray-300 px-4 py-1 text-center text-sm md:text-base"><%= @rankings.offset_value + index + 1 %></td>
              <td class="border border-gray-300 px-4 py-1 text-sm md:text-base"><%= result.user.name %></td>
              <td class="border border-gray-300 px-4 py-1 text-center text-sm md:text-base"><%= result.correct_answers %> / <%= result.total_questions %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="flex flex-row justify-center md:py-10">
        <%= paginate @rankings %>
      </div>

      <div class="flex flex-row justify-center px-5 md:px-10">
        <%= link_to 'ランキングに挑戦する', start_challenge_mode_quizzes_path, class: 'btn text-base-100 text-sm md:text-base font-bold bg-secondary m-10' %>
      </div>

    </div>

  </div>
</div>
