<div class="flex flex-col min-h-screen bg-base-100">
  <div class="p-10 bg-base-100">
    <div class="bg-primary rounded-lg text-secondary">
      <div class="flex flex-col justify-center items-center px-10">


        <div class="flex flex-col w-full p-10">
          <h2 class="text-3xl font-bold text-center pt-20 pb-10">チャレンジモード ランキング</h2>


          <table class="table-auto w-full border-collapse border border-gray-200 my-10">
            <thead>
              <tr class="bg-white text-lg">
                <th class="border border-gray-300 py-2">順位</th>
                <th class="border border-gray-300 py-2">ユーザー名</th>
                <th class="border border-gray-300 py-2">正答数</th>
              </tr>
            </thead>
            <tbody>
              <% @rankings.each_with_index do |result, index| %>
                <tr class="bg-base-100">
                  <td class="border border-gray-300 px-4 py-1 text-center"><%= @rankings.offset_value + index + 1 %></td>
                  <td class="border border-gray-300 px-4 py-1"><%= result.user.name %></td>
                  <td class="border border-gray-300 px-4 py-1 text-center"><%= result.correct_answers %> / <%= result.total_questions %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="flex flex-row justify-center py-10">
            <%= paginate @rankings %>
          </div>

          <div class="flex flex-row justify-center px-10">
            <%= link_to 'ランキングに挑戦する', start_challenge_mode_quizzes_path, class: 'btn text-base-100 font-bold bg-secondary m-10' %>
          </div>

        </div>

      </div>
    </div>
  </div>
</div>
