<div class="flex flex-col min-h-screen bg-base-100 py-10 px-3 md:p-10">
  <div class="flex flex-col flex-1 bg-primary rounded-lg text-secondary px-2 py-10 md:p-10">

        <div class="flex flex-col justify-center items-center md:m-10">

          <%= form_with model: @user, url: mypage_path, method: :put do |f| %>
          <h2 class="text-xl md:text-3xl font-bold mb-10 md:mb-14"><%= t('.title') %></h2>

          <div class="flex flex-col my-5 md:my-10 w-[300px] md:w-[400px]">
            <%= f.label :name, class: "form-label text-sm md:text-base mb-2" %>
            <%= f.text_field :name, class: "form-control w-full" %>
          </div>

          <div class="flex flex-col my-5 md:my-10 w-[300px] md:w-[400px]">
            <%= f.label :email, class: "form-label text-sm md:text-base mb-2" %>
            <%= f.email_field :email, class: "form-control w-full" %>
          </div>

          <div class="flex justify-center items-center mt-12 md:mt-20 w-full">
            <%= f.submit t('helpers.submit.update'), class: "btn btn-neutral bg-base-100 text-secondary text-sm md:text-base w-[100px] md:w-[200px]" %>
          </div>
          <% end %>

        </div>

  </div>
</div>
