<div class="flex flex-col min-h-screen bg-base-100">
  <div class="p-10 bg-base-100">
    <div class="bg-primary rounded-lg text-secondary">
      <div class="flex flex-col p-10">

        <div class="flex flex-col justify-center items-center m-10">
          <%= form_with model: @user do |f| %>
          <h2 class="text-3xl font-bold mb-15"><%= t('.title') %></h2>

          <div class="flex flex-col my-10" style="width: 400px;">
            <%= f.label :name, class: "form-label mb-2" %>
            <%= f.email_field :name, class: "form-control w-full" %>
          </div>

          <div class="flex flex-col my-10" style="width: 400px;">
            <%= f.label :email, class: "form-label mb-2" %>
            <%= f.password_field :email, class: "form-control w-full" %>
          </div>

          <div class="flex flex-col my-10" style="width: 400px;">
            <%= f.label :password, class: "form-label mb-2" %>
            <%= f.password_field :password, class: "form-control w-full" %>
          </div>

          <div class="flex flex-col my-10" style="width: 400px;">
            <%= f.label :password_confirmation, class: "form-label mb-2" %>
            <%= f.password_field :password_confirmation, class: "form-control w-full" %>
          </div>

          <div class="flex justify-center mt-20" style="width: 400px;">
            <%= f.submit t('helpers.submit.create'), class: "btn btn-neutral bg-base-100 text-secondary" %>
          </div>

          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
